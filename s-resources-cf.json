            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "${defaultRCU}",
          "WriteCapacityUnits": "${defaultWCU}"
        },
        "TableName": "$${linksTable}"
