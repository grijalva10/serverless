    "AwsMarketplaceNotificationsQueue": {
      "Type": "AWS::SQS::Queue",
      "Properties": {
        "QueueName": "${project}-${stage}-AwsMarketplaceNotifications"
      }
    },
    "AwsMarketplaceNotificationsQueuePolicy" : {
      "Type" : "AWS::SQS::QueuePolicy",
      "Properties" : {
        "PolicyDocument" : {
          "Id" : "AwsMarketplaceNotificationsQueuePolicy",
          "Version" : "2012-10-17",
          "Statement" : [ {
            "Sid" : "Allow-User-SendMessage",
            "Effect" : "Allow",
            "Principal" : {
            "AWS" : "${awsMarketplaceUserArn}"
            },
            "Action" : [ "sqs:SendMessage" ],
            "Resource" : "*"
          } ]
        },
        "Queues": [{ "Ref" : "AwsMarketplaceNotificationsQueue" }]
      }
