          },
          {
            "AttributeName": "sentAt",
            "AttributeType": "N"
          },
          {
            "AttributeName": "scheduledAt",
            "AttributeType": "N"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "userId",
