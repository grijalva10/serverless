{
  "name": "createRecipient",
  "runtime": "babel",
  "description": "Serverless Lambda function for project: MoonMail-v2",
  "customName": "${project}-recipients-createRecipient",
  "customRole": false,
  "handler": "recipients/createRecipient/handler.default",
  "timeout": 6,
  "memorySize": 1024,
  "authorizer": {},
  "custom": {
    "excludePatterns": [],
    "cors": "$${corsSettings}"
  },
  "endpoints": [
    {
      "path": "/lists/{listId}/recipients",
      "method": "POST",
      "type": "AWS",
      "authorizationType": "none",
      "authorizerFunction": false,
      "apiKeyRequired": false,
      "requestParameters": {},
      "requestTemplates": {
        "application/json": {
          "listId": "$input.params('listId')",
          "recipient": "$input.json('$')",
          "authToken": "$input.params('Authorization')"
        }
      },
      "responses": "$${responses}"
    }
  ],
  "events": [],
  "environment": {
    "SERVERLESS_PROJECT": "${project}",
    "SERVERLESS_STAGE": "${stage}",
    "SERVERLESS_REGION": "${region}",
    "DEBUG": "true",
    "RECIPIENTS_TABLE": "$${recipientsTable}",
    "LISTS_TABLE": "$${listsTable}"
  },
  "vpc": {
    "securityGroupIds": [],
    "subnetIds": []
  }
}
